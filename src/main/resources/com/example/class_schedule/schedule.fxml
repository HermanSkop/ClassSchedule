<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="scrollPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.class_schedule.MainController">
   <VBox fx:id="vbox" prefHeight="568.0" prefWidth="831.0" spacing="20.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
      <BorderPane prefHeight="25.0" prefWidth="791.0">
         <left>
            <HBox prefHeight="26.0" prefWidth="257.0" BorderPane.alignment="CENTER">
               <Label prefHeight="26.0" prefWidth="64.0" text="Date from:" />
               <DatePicker fx:id="startDate" prefHeight="26.0" prefWidth="169.0" />
            </HBox>
         </left>
         <center>
            <HBox prefHeight="14.0" prefWidth="409.0" BorderPane.alignment="CENTER">
               <Label prefHeight="26.0" prefWidth="50.0" text="Date to:" />
               <DatePicker fx:id="endDate" prefHeight="26.0" prefWidth="182.0" />
               <TextField fx:id="textField" promptText="Input subject name">
                  <HBox.margin>
                     <Insets left="30.0" top="2.0" />
                  </HBox.margin>
               </TextField>
               <Button fx:id="submitButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="99.0" text="Submit">
                  <font>
                     <Font size="14.0" />
                  </font>
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin>
               </Button>
            </HBox>
         </center>
      </BorderPane>
   </VBox>
</ScrollPane>
